<!-- description: 消息消费者 数据库操作mapper -->
<mapper namespace="com.xr.message.mapper.MessageConsumerMapper">

  <sql id="Base_Column_List">
    `id`, `name`, `consumer_url`, `description`, `version`, `create_time`, `update_time`
  </sql>

  <!-- 自定义查询条件 -->
  <sql id="Custom_Where_Sql">

  </sql>

  <!-- 基础查询条件，不允许修改，自定义条件在Custom_Where_Sql中添加 -->
  <sql id="Base_Where_Sql">
    <if test="idList != null and idList.size() > 0">
      <![CDATA[ AND t.`id` IN ]]>
      <foreach collection="idList" item="item" open="(" separator="," close=")">
        <![CDATA[ #{item} ]]>
      </foreach>
    </if>
    <if test="where_version != null">
      <![CDATA[ AND t.`version` = #{where_version} ]]>
    </if>
    <if test="id != null">
      <![CDATA[ AND t.`id` = #{id} ]]>
    </if>
    <if test="name != null">
      <![CDATA[ AND t.`name` = #{name} ]]>
    </if>
    <if test="consumer_url != null">
      <![CDATA[ AND t.`consumer_url` = #{consumer_url} ]]>
    </if>
    <if test="description != null">
      <![CDATA[ AND t.`description` = #{description} ]]>
    </if>
    <if test="create_time != null">
      <![CDATA[ AND t.`create_time` = #{create_time} ]]>
    </if>
    <if test="update_time != null">
      <![CDATA[ AND t.`update_time` = #{update_time} ]]>
    </if>
  </sql>

  <sql id="Where_Sql">
    <where>
      <include refid="Base_Where_Sql"/>
      <include refid="Custom_Where_Sql"/>
    </where>
  </sql>

  <!-- 插入 -->
  <insert id="insert" parameterType="com.xr.message.common.model.MessageConsumerModel" keyProperty="user_id">
    <![CDATA[ INSERT INTO `xr_message_consumer` ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        <![CDATA[ `id`, ]]>
      </if>
      <if test="name != null">
        <![CDATA[ `name`, ]]>
      </if>
      <if test="consumer_url != null">
        <![CDATA[ `consumer_url`, ]]>
      </if>
      <if test="description != null">
        <![CDATA[ `description`, ]]>
      </if>
      <if test="version != null">
        <![CDATA[ `version`, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ `create_time`, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ `update_time`, ]]>
      </if>
    </trim>
    <![CDATA[ VALUES ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        <![CDATA[ #{id}, ]]>
      </if>
      <if test="name != null">
        <![CDATA[ #{name}, ]]>
      </if>
      <if test="consumer_url != null">
        <![CDATA[ #{consumer_url}, ]]>
      </if>
      <if test="description != null">
        <![CDATA[ #{description}, ]]>
      </if>
      <if test="version != null">
        <![CDATA[ #{version}, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ #{create_time}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ #{update_time}, ]]>
      </if>
    </trim>
  </insert>

  <!-- 批量插入 -->
  <insert id="insertBatch" parameterType="com.xr.message.common.model.MessageConsumerModel">
    <![CDATA[ INSERT INTO `xr_message_consumer` (`id`, `name`, `consumer_url`, `description`, `version`, `create_time`, `update_time`) VALUES ]]>
    <foreach collection="list" separator="," item="item">
      (#{item.id}, #{item.name}, #{item.consumer_url}, #{item.description}, #{item.version}, #{item.create_time}, #{item.update_time})
    </foreach>
  </insert>

  <!-- 更新（主键/version/create_time不会被更新，version自增1） -->
  <update id="update" parameterType="map">
    <![CDATA[ UPDATE `xr_message_consumer` t SET t.`version` = t.`version` + 1, ]]>
    <trim suffixOverrides=",">
      <if test="name != null">
        <![CDATA[ t.`name` = #{name}, ]]>
      </if>
      <if test="consumer_url != null">
        <![CDATA[ t.`consumer_url` = #{consumer_url}, ]]>
      </if>
      <if test="description != null">
        <![CDATA[ t.`description` = #{description}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ t.`update_time` = #{update_time}, ]]>
      </if>
    </trim>
    <where>
      <if test="id != null">
        <![CDATA[ AND t.`id` = #{id} ]]>
      </if>
      <if test="where_version != null">
        <![CDATA[ AND t.`version` = #{where_version} ]]>
      </if>
    </where>
  </update>

  <!-- 删除 -->
  <delete id="delete" parameterType="map">
    <![CDATA[ DELETE t FROM `xr_message_consumer` t ]]>
    <include refid="Where_Sql"/>
  </delete>

  <!-- 查询行数 -->
  <select id="selectCount" parameterType="map" resultType="long">
    <![CDATA[ SELECT COUNT(*) FROM `xr_message_consumer` t ]]>
    <include refid="Where_Sql"/>
  </select>

  <!-- 查询记录 -->
  <select id="selectList" parameterType="map" resultType="com.xr.message.common.model.MessageConsumerModel">
    <include refid="global.pageStart"/>
    <![CDATA[ SELECT ]]>
    <include refid="Base_Column_List"/>
    <![CDATA[ FROM `xr_message_consumer` t ]]>
    <include refid="Where_Sql"/>
    <include refid="global.globalSort"/>
    <include refid="global.pageEnd"/>
  </select>

</mapper>