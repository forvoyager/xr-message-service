<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- author: forvoyager@outlook.com -->
<!-- time: 2019-06-18 08:05:38 -->
<!-- description: 消息内容表 数据库操作mapper -->
<mapper namespace="com.xr.message.mapper.MessageContentMapper">

  <sql id="Base_Column_List">
    `msg_id`, `content`
  </sql>

  <!-- 自定义查询条件 -->
  <sql id="Custom_Where_Sql">

  </sql>

  <!-- 基础查询条件，不允许修改，自定义条件在Custom_Where_Sql中添加 -->
  <sql id="Base_Where_Sql">
    <if test="idList != null and idList.size() > 0">
      <![CDATA[ AND t.`msg_id` IN ]]>
      <foreach collection="idList" item="item" open="(" separator="," close=")">
        <![CDATA[ #{item} ]]>
      </foreach>
    </if>
    <if test="where_version != null">
      <![CDATA[ AND t.`version` = #{where_version} ]]>
    </if>
    <if test="msg_id != null">
      <![CDATA[ AND t.`msg_id` = #{msg_id} ]]>
    </if>
    <if test="content != null">
      <![CDATA[ AND t.`content` = #{content} ]]>
    </if>
  </sql>

  <sql id="Where_Sql">
    <where>
      <include refid="Base_Where_Sql"/>
      <include refid="Custom_Where_Sql"/>
    </where>
  </sql>

  <!-- 插入 -->
  <insert id="insert" parameterType="com.xr.message.common.model.MessageContentModel" keyProperty="user_id">
    <![CDATA[ INSERT INTO `xr_message_content` ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="msg_id != null">
        <![CDATA[ `msg_id`, ]]>
      </if>
      <if test="content != null">
        <![CDATA[ `content`, ]]>
      </if>
    </trim>
    <![CDATA[ VALUES ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="msg_id != null">
        <![CDATA[ #{msg_id}, ]]>
      </if>
      <if test="content != null">
        <![CDATA[ #{content}, ]]>
      </if>
    </trim>
  </insert>

  <!-- 批量插入 -->
  <insert id="insertBatch" parameterType="com.xr.message.common.model.MessageContentModel">
    <![CDATA[ INSERT INTO `xr_message_content` (`msg_id`, `content`) VALUES ]]>
    <foreach collection="list" separator="," item="item">
      (#{item.msg_id}, #{item.content})
    </foreach>
  </insert>

  <!-- 更新（主键/version/create_time不会被更新，version自增1） -->
  <update id="update" parameterType="map">
    <![CDATA[ UPDATE `xr_message_content` t SET t.`version` = t.`version` + 1, ]]>
    <trim suffixOverrides=",">
      <if test="content != null">
        <![CDATA[ t.`content` = #{content}, ]]>
      </if>
    </trim>
    <where>
      <if test="msg_id != null">
        <![CDATA[ AND t.`msg_id` = #{msg_id} ]]>
      </if>
      <if test="where_version != null">
        <![CDATA[ AND t.`version` = #{where_version} ]]>
      </if>
    </where>
  </update>

  <!-- 删除 -->
  <delete id="delete" parameterType="map">
    <![CDATA[ DELETE t FROM `xr_message_content` t ]]>
    <include refid="Where_Sql"/>
  </delete>

  <!-- 查询行数 -->
  <select id="selectCount" parameterType="map" resultType="long">
    <![CDATA[ SELECT COUNT(*) FROM `xr_message_content` t ]]>
    <include refid="Where_Sql"/>
  </select>

  <!-- 查询记录 -->
  <select id="selectList" parameterType="map" resultType="com.xr.message.common.model.MessageContentModel">
    <include refid="global.pageStart"/>
    <![CDATA[ SELECT ]]>
    <include refid="Base_Column_List"/>
    <![CDATA[ FROM `xr_message_content` t ]]>
    <include refid="Where_Sql"/>
    <include refid="global.globalSort"/>
    <include refid="global.pageEnd"/>
  </select>

</mapper>