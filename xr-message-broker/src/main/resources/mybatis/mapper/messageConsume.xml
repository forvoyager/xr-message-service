  <!-- 插入 -->
  <insert id="insert" parameterType="com.xr.message.model.MessageConsumeModel" keyProperty="id" useGeneratedKeys="true">
    <![CDATA[ INSERT INTO xr_message_consume ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        <![CDATA[ `id`, ]]>
      </if>
      <if test="message_id != null">
        <![CDATA[ `message_id`, ]]>
      </if>
      <if test="consumer_id != null">
        <![CDATA[ `consumer_id`, ]]>
      </if>
      <if test="status != null">
        <![CDATA[ `status`, ]]>
      </if>
      <if test="version != null">
        <![CDATA[ `version`, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ `create_time`, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ `update_time`, ]]>
      </if>
    </trim>
    <![CDATA[ VALUES ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        <![CDATA[ #{id}, ]]>
      </if>
      <if test="message_id != null">
        <![CDATA[ #{message_id}, ]]>
      </if>
      <if test="consumer_id != null">
        <![CDATA[ #{consumer_id}, ]]>
      </if>
      <if test="status != null">
        <![CDATA[ #{status}, ]]>
