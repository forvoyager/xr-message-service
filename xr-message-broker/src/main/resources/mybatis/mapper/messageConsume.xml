        <![CDATA[ #{create_time}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ #{update_time}, ]]>
      </if>
    </trim>
  </insert>

  <!-- 批量插入 -->
  <insert id="insertBatch" parameterType="com.xr.message.model.MessageConsumeModel">
    <![CDATA[ INSERT INTO xr_message_consume (`id`, `message_id`, `consumer_id`, `status`, `version`, `create_time`, `update_time`) VALUES ]]>
    <foreach collection="list" separator="," item="item">
      (#{item.id}, #{item.message_id}, #{item.consumer_id}, #{item.status}, #{item.version}, #{item.create_time}, #{item.update_time})
    </foreach>
  </insert>

  <!-- 更新（主键/version/create_time不会被更新，version自增1） -->
  <update id="update" parameterType="map">
    <![CDATA[ UPDATE xr_message_consume t SET t.`version` = t.`version` + 1, ]]>
    <trim suffixOverrides=",">
      <if test="message_id != null">
        <![CDATA[ t.`message_id` = #{message_id}, ]]>
      </if>
      <if test="consumer_id != null">
        <![CDATA[ t.`consumer_id` = #{consumer_id}, ]]>
